<p id="notice"><%= notice %></p>

<h1 class="red">企業情報</h1>

<table>
  <thead>
    <tr>
      <th>企業名</th>
      <th>住所</th>
      <th>事業詳細</th>
      <th>電話番号</th>
      <th>従業員数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.address %></td>
        <td><%= company.detail %></td>
        <td><%= company.tel %></td>
        <td><%= company.employee_number %></td>
        <td><%= link_to '詳細', company %></td>
        <td><%= link_to '編集', edit_company_path(company) %></td>
        <td><%= link_to '削除', company, method: :delete, data: { confirm: '削除してもよろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_company_path %>
